.container > .list > .item {
  box-shadow: 0px 0px 15px 0px rgba(40, 112, 105, 0.2);
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  margin-top: 30rpx;
}
.container > .list > .item > view {
  display: flex;
  align-items: center;
}
.container > .list > .item > view > view:nth-child(1) {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
}
.container > .list > .item > view > view:nth-child(1) > image {
  width: 80rpx;
  height: 80rpx;
}
